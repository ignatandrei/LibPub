@model IEnumerable<LibQRDAL.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdtinRead)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Creator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Identifier)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsCorrect)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ErrorMessage)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdtinRead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCorrect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErrorMessage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idbook">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idbook">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idbook">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
